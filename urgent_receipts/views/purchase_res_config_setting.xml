<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_config_settings_form_purchase_margin" model="ir.ui.view">
        <field name="name">resconfig.setting.product.form2</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='matrix_setting_container']" position="after">
                <!-- Add the new block here -->
                <block title="PO Amount" name="po_amount_block">
                    <group>
                        <!-- Add fields or other elements here -->
                        <field name="po_amount"/>
                        <!-- You can include additional fields or settings -->
                    </group>
                </block>
            </xpath>
        </field>
    </record>
</odoo>


